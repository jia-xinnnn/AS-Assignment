@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h4 class="text-center">Password Reset Email Sent</h4>
                </div>
                <div class="card-body text-center">
                    <p>A password reset link has been sent to your registered email.</p>
                    <p>Please check your email inbox (and spam folder) for further instructions.</p>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
